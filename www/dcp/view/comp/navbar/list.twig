<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
                Navigation Bar
			</h3>
			{# <div class="card-tools">
				<a href="/dcp/slider/add" class="button">Add slide</a>
			</div> #}
		</div>

		<div class="card-body">
        <form method="post">
			<table class="table">
				{% for pinfo in data %}
					<tr>
						<td>
                        <input type="text" class="form-control" value="{{pinfo.name}}" name="navlink_{{pinfo.id}}">
						</td>
						<td>{{pinfo.link}}</td>
					</tr>
				{% endfor %}
                <tr>
                    <td colspan="2"><button class="form-control">Save</button></td>
                </tr>
			</table>
            <input type="hidden" name="action" value="update-navbar">
        </form>
		</div>
	</div>
</section>
