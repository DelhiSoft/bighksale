<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Add Policy Page
			</h3>
			<div class="card-tools"></div>
		</div>

		<div class="card-body">
			<form enctype="multipart/form-data" method="post">
				<table class="table">
					<tr>
						<th>Name</th>
						<td><input type="text" class="form-control" name="name" value=""></td>
					</tr>
					<tr>
						<th>Description</th>
						<td>
							<textarea name="description" cols="30" rows="10" class="form-control tinymce"></textarea>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<button class="form-control btn-primary">Save</button>
						</td>
					</tr>
				</table>
				<input type="hidden" name="action" value="add-policy">
			</form>
		</div>
	</div>
</section>

