<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Mega Deal
			</h3>
			<div class="card-tools">
				<a href="/dcp/megadeal/add" class="button">Add</a>
			</div>
		</div>

		<div class="card-body">
			<table class="table">
				{% for slide in data %}
					<tr>
						<td>
							<img src="/image/deals/{{slide.id}}" style="width:100px;">
						</td>
						<td>{{slide.link}}</td>
						{# <td>
							<a href="/dcp/megadeal/update/{{slide.id}}">Update</a>
						</td> #}
						<td>
							<a href="/dcp/megadeal/delete/{{slide.id}}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
</section>
