<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Mega deals
			</h3>
			<div class="card-tools"></div>
		</div>

		<div class="card-body">
			<form enctype="multipart/form-data" method="post">
				<table class="table">
					<tr>
						<th>Banner</th>
						<td>
							<input class="form-control" name="image" type="file">
						</td>
					</tr>
					<tr>
						<th>Link</th>
						<td><input type="text" class="form-control" name="link" value=""></td>
					</tr>
					<tr>
						<td colspan=2>
							<button class="form-control btn-primary">Save</button>
						</td>
					</tr>
				</table>
				<input type="hidden" name="action" value="add-deal">
			</form>
		</div>
	</div>
</section>
