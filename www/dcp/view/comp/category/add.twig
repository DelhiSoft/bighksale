<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Category
			</h3>
			<div class="card-tools"></div>
		</div>

		<div class="card-body">
			<form enctype="multipart/form-data" method="post">
				<table class="table">
					<tr>
						<th>Icon</th>
						<td>
							<input class="form-control" name="image" type="file">
						</td>
					</tr>
					<tr>
						<th>Name</th>
						<td><input type="text" class="form-control" name="name" value=""></td>
					</tr>
					<tr>
						<th>Link (Optional)</th>
						<td><input type="text" class="form-control" name="link" value=""></td>
					</tr>
					<tr>
						<th>Parent Category</th>
						<td>
							<select name="parent"  class="form-control">
								<option value="0">None</option>
								{% for cat in catList %}
								<option value="{{cat.id}}">{{cat.path}} ({{cat.name}})</option>
								{% endfor %}
							</select>
						</td>
					</tr>
					<tr>
						<th>Show in Navigation Bar</th>
						<td>
						<select name="navbar" id="" class="form-control">
							<option value="1">Yes</option>
							<option value="0">No</option>
						</select>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<button class="form-control btn-primary">Save</button>
						</td>
					</tr>
				</table>
				<input type="hidden" name="action" value="add-category">
			</form>
		</div>
	</div>
</section>
