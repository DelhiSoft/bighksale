<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Categories
			</h3>
			<div class="card-tools">
				<a href="/dcp/category/add" class="button">Add</a>
			</div>
		</div>

		<div class="card-body">
			<table class="table">
				<tr>
					<th colspan=2>Sl. No.</th>
					<th>Name</th>
					<th>Path</th>
<th>In Navbar</th>
					<th> Action</th>
				</tr>
				{% for item in category %}
					{% set cat = cats[item.id] %}
					<tr>
						<td>{{loop.index}}</td>
						<td>
							<img src="/image/category/{{item.id}}" alt="{{cat.path}}" style="width:100px">
						</td>
						<td>
							<a href="/dcp/category/{{item.id}}">{{cat.name}}</a>
						</td>
						<td>{{cat.path}}</td>
						<td>
							{% if item.navbar == 1 %}
								<a href="/dcp/category/hide/{{item.id}}">Hide</a>
							{% else %}
								<a href="/dcp/category/show/{{item.id}}">Show</a>
							{% endif %}
						</td>
						<td>
							<a href="/dcp/category/delete/{{item.id}}">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
	</div>
</section>
