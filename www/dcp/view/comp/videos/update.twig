<section
	class="col-lg-12 connectedSortable">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Videos on front page
			</h3>
			<div class="card-tools"></div>
		</div>

		<div class="card-body">
			<form enctype="multipart/form-data" method="post">
				<table class="table">
					<tr>
						<th>Display Image</th>
						<td>
							<input class="form-control" name="image" type="file">
							{% if info.id is defined %}
								<span>Note: Don't upload a file if you don't want to change it</span>
							{% endif %}
						</td>
					</tr>
					<tr>
						<th>YouTube URL</th>
						<td><input type="text" name=url class="form-control" value="{{info.url}}"></td>
					</tr>
					<tr>
						<td colspan="2">
							<button class="form-control btn-primary">Save</button>
						</td>
					</tr>
				</table>
				{% if info.id is defined %}
				<input type="hidden" name="id" value={{info.id}}>
					<input type="hidden" name="action" value="update-video">
				{% else %}
					<input type="hidden" name="action" value="add-video">
				{% endif %}
			</form>
		</div>
	</div>
</section>
