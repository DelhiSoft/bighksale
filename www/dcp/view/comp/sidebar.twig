<aside class="main-sidebar sidebar-dark-primary elevation-4">
	<a href="/dcp/" class="brand-link">
		<img src="/dcp/dist/img/Digitlism_Square.png" alt="DCP" class="brand-image img-circle elevation-3" style="opacity: .8;background:#fff">
		<span class="brand-text font-weight-light">Digitlism Control Panel</span>
	</a>

	<div class="sidebar">
		<div class="user-panel mt-3 pb-3 mb-3 d-flex">
			<div class="image">
				<img src="/dcp/dist/img/user.png" class="img-circle elevation-2" alt="User Image" style="background:#fff">
			</div>
			<div class="info">
				<a href="/dcp/profile" class="d-block">{{user.name}}</a>
			</div>
		</div>

		<nav class="mt-2">
			<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                {% for btn in sidebar %}
				<li class="nav-item has-treeview menu-open">
					<a href="/dcp/{{btn.link}}" class="nav-link  {{active[btn.link]}}">
						<i class="nav-icon fas fa-tachometer-alt"></i>
						<p>
							{{btn.text}}
						</p>
					</a>
				</li>
                {% endfor %}
			</ul>
		</nav>
	</div>
</aside>
