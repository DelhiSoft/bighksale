<section
	class="col-lg-12 connectedSortable">
	<!-- Custom tabs (Charts with tabs)-->
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				{% if info.video !='' %}
					Updating Video Link for
				{% else %}
					Add New Vidoe Link for
				{% endif %}
				{{info.name}}
			</h3>
			<div class="card-tools"></div>
		</div>

		<div class="card-body">
			<form enctype="multipart/form-data" method="post">
				<table class="table">
					<tr>
						<th>Video Link</th>
						<td>
							<input type="text" class="form-control" name="video" value="{{info.video}}">
						</td>
					</tr>

					<tr>
						<td colspan="2">
							<button class="form-control btn-primary">Save</button>
						</td>
					</tr>
				</table>
				{% if info.id is defined %}
					<input type="hidden" name="action" value="add-product-video">
					<input type="hidden" name="id" value="{{info.id}}">
				{% endif %}
			</form>
		</div>
	</div>
</section>
