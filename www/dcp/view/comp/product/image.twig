<section
	class="col-lg-12 connectedSortable">
	<div class="card">
		<div class="card-header">
			<h3 class="card-title">
				<i class="fas fa-chart-pie mr-1"></i>
				Product Images
			</h3>
		</div>

		<div class="card-body">
			<table class="table">
				<tr>
					<th>#</th>
					<th>Image</th>
					<th>Action</th>
				</tr>
				{% for img in imgs %}
					
				<tr>
					<td>
						{{loop.index}}
					</td>
					<td>
						<img src="/image/prodimg/{{img.id}}" style="width:100px;">
					</td>
					<td>
						<a href="/dcp/product/delimg/{{img.id}}/{{product}}">Delete</a>
					</td>
				</tr>
				{% endfor %}
<form enctype="multipart/form-data" method="post">

				<tr>
					<td>
						#
					</td>					
					<td>
<input class="form-control" name="image" type="file">
					</td>					
					<td>
				<input type="hidden" name="product" value={{product}}>
<input type="hidden" name="action" value="prodimg">

						<button class='form-control'>submit</button>
					</td>
				</tr>
</form>				
			</table>
		</div>
	</div>
</section>
