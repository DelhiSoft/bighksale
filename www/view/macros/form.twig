{% macro registration() %}
    <div class="container">
        <div class="signin">
            <h2 class="title">Create an account</h2>
            <form method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input class="input--style-3" type="text" name="name" pattern="[a-zA-Z ]{2,50}" onkeyup=reg.validate.name(this) required>
                </div>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input class="input--style-3" type="tel" name="phone" pattern="[0-9]{10,15}" onkeyup=reg.validate.phone(this)>
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    <input class="input--style-3" type="email" name="email" onkeyup=enquiry.validate.email(this) required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="input--style-3" type="password" name="pass" onkeyup=reg.validate.pass(this) requried>
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <input class="input--style-3" type="password" name="cnfpass" onkeyup=reg.validate.pass(this)>
                </div>
                <div class="text-center">
                    <input type="hidden" name="action" value="register">
                    <button class="btn btn-danger" type="button" onclick="reg.submit(this)">Submit</button>
                </div>

                <div class="all-ready-user">
                    <p>Already User<a href="/login">Login</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
{% endmacro %}

