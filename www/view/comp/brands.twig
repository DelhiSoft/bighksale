<section>
	<div class="brand-wise">
		<div class="container">
			<div class="site-heading-area">
				<h2 class="section-heading">Our
					<span>Brands</span>
				</h2>
			</div>
			<div class="owl-brand owl-carousel owl-theme">
				{% for brand in brands %}
					<div class="item">
						<div class="brand-logo">
							<a href="/brand/{{brand.id}}"><img src="/image/brand/{{brand.id}}" alt="{{brand.name}}"></a>
						</div>
					</div>
				{% endfor %}
		</div>
	</div>
</section>
