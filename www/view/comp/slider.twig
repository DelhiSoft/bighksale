<section class="website-slider">
	<div class="slider-area">
		<div class="owl-one owl-carousel owl-theme">
			{% for slide in page.slider %}
				<div class="item">
					<div class="slide-image">
						<img src="{{slide.banner}}" alt="{{slide.alt}}">
					</div>
					<div class="banner-texT">
						<div class="container">
							<div class="row">
								<div class="col-md-6 wow bounceInUp">
									<div class="text_on_banner">
										<div class='bnrtxt1'>{{slide.text[0]}}</div>
										{% if loop.index == 1 %}
											<h1>{{slide.text[1]}}
												<span>{{slide.text[2]}}</span>
											</h1>
										{% else %}
											<div class='bnrtxt2'>{{slide.text[1]}}
												<span>{{slide.text[2]}}</span>
											</div>
										{% endif %}
										{% if slide.btn is defined %}
											<a href="{{slide.btn.link}}">{{slide.btn.text}}</a>
										{% endif %}
									</div>
								</div>
								<div class="col-md-6"></div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
</section>
